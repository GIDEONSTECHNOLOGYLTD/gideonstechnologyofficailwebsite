{% extends 'base.twig' %}

{% block title %}Store - {{ parent() }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-3">
            <div class="card mb-4">
                <div class="card-header">
                    Categories
                </div>
                <div class="list-group list-group-flush">
                    {% for category in categories %}
                        <a href="{{ path_for('store.products.category', {'category': category.slug}) }}" 
                           class="list-group-item list-group-item-action">
                            {{ category.name }}
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <h2>Featured Products</h2>
            <div class="row">
                {% for product in products %}
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <img src="{{ product.image_url }}" class="card-img-top" alt="{{ product.name }}">
                            <div class="card-body">
                                <h5 class="card-title">{{ product.name }}</h5>
                                <p class="card-text">{{ product.description|slice(0, 100) }}...</p>
                                <p class="card-text"><strong>${{ product.price|number_format(2) }}</strong></p>
                                <a href="{{ path_for('store.products.show', {'id': product.id}) }}" class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-12">
                        <div class="alert alert-info">No products found.</div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
